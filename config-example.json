# Example configuration
{
  "operations": [
    {
      "operation": "clean",
      "source": "./img/processed"
    },
    {
      "operation": "crop",
      "size": 608,
      "source": "./img",
      "target": "./img/processed"
    },
    {
      "operation": "rotate",
      "angle": 5,
      "steps": 10,
      "source": "./img/processed",
      "target": "./img/processed"
    },
    {
      "operation": "grayscale",
      "source": "./img/processed",
      "target": "./img/processed"
    },
    {
      "operation": "generateCrop",
      "backgrounds": "./img/backgrounds",
      "source": "./img/objects",
      "target": "./img/objects_cropped"
    },
    {
      "operation": "generate",
      "scaleFrom": 0.2,
      "scaleTo": 1.5,
      "visiblePart": 0.3,
      "steps": 10,
      # possible limit policies: top, random
      "limitPolicy": "random",
      # possible options: limitNumber, limitPercent
      "limitOption": "limitPercent",
      "limit": 50,
      "objects": "./img/objects_cropped",
      "backgrounds": "./img/backgrounds",
      "target": "./img/processed"
    },
    {
      "operation": "balance",
      "ratio": 1,
      "source": "./img/processed",
      "target": "./img/processed/removed"
    },
    {
      "operation": "remove",
      "type": "unmarked",
      "source": "./img/processed",
      "target": "./img/processed/removed"
    }
  ]
}